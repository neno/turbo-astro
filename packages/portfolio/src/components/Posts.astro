---
import H1 from './H1.astro';

interface Post {
  data: {
    title: string;
  };
}
interface Props {
  posts: Post[];
}

const { posts } = Astro.props;
---

<H1 text='Component from portfolio pkg' />
{
  posts.map((post) => (
    <div>
      <h2>{post.data.title}</h2>
    </div>
  ))
}

<style>
  h2 {
    color: white;
    font-size: 1.5em;
  }
</style>
