---
import Layout from '../layouts/Layout.astro';
import Main from '../components/Main.astro';
import PortfolioPostsJosip from '@repo/portfolio-josip-anic/portfolio.astro';
import PortfolioPostsNenad from '@repo/portfolio-nenad-brcic/portfolio.astro';
---

<Layout title='Team - neno.ch'>
  <Main>
    <h1>Meet the neno team</h1>
    <div class='grid'>
      <div>
        <PortfolioPostsJosip />
      </div>
      <div>
        <PortfolioPostsNenad />
      </div>
    </div>
  </Main>
</Layout>

<style>
  h1 {
    margin-bottom: 2rem;
    font-size: 4em;
    color: red;
  }
  .grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }
</style>
